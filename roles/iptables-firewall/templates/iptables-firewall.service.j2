[Unit]
Description=iptables firewall service
After=network.target

[Service]
Type=oneshot
ExecStart={{ iptables_firewall_script_path }}/iptables-firewall.sh start
RemainAfterExit=true
ExecStop={{ iptables_firewall_script_path }}/iptables-firewall.sh stop
StandardOutput=journal

[Install]
WantedBy=multi-user.target
